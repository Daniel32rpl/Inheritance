package dasar;
public class game {
    public static void main(String[] args){

        // membuat objek player
        player daudy = new player();

        // mengisi atribut player
        daudy.name = "Daudy Bahari";
        daudy.speed = 78;
        daudy.healthPoin = 0;

        // menjalankan method
        daudy.run();

        if(daudy.isDead()){
            System.out.println("Game Over!");
        }

    }
    
}
